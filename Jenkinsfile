pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hi, it is me, Mario!!'
            }
        }
        stage('Build') {
            steps {
                echo 'Now I am connecting our pipes'
            }
        }
        stage('Test') {
            steps {
                echo 'Now I going to test if we have some leaks'
            }
        }
        stage('Release') {
            steps {
                echo 'It is done!! I am the pipeline king!!'
            }
        }
    }
}
